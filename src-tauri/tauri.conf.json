{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "universalconverter",
  "version": "0.1.0",
  "identifier": "com.livingWell.imgconverter",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "图片格式转换器",
        "width": 1600,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 1200,
        "minHeight": 600,
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: http://asset.localhost https://asset.localhost data:; connect-src 'self' asset: http://asset.localhost https://asset.localhost;",
      "assetProtocol": {
        "enable": true
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/magick"
    ]
  }
}
