{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "fs:default",
    {
      "identifier": "fs:allow-read",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-write",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [{ "path": "**" }]
    },
    "dialog:default",
    {
      "identifier": "fs:allow-read",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    {
      "identifier": "fs:allow-stat",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": true,
          "name": "binaries/magick",
          "sidecar": true
        }
      ]
    },
    "os:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/magick",
          "sidecar": true,
          "args": true
        },
        {
          "name": "explorer",
          "cmd": "explorer",
          "args": true
        },
        {
          "name": "open",
          "cmd": "open",
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-open",
      "allow": [
        { "remote": "https://*", "schemes": ["mailto", "tel"] }
      ]
    }
  ]
}